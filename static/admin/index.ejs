<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unifront Crisis Relief - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-body-secondary">
    <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarList">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarList">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#map-section">Map</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#inventory-section">Inventory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#statistics-section">Statistics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#announcements-section">Announcements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#rescuer-accounts-section">Rescuer Accounts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/catalogue">Announcements</a>
                    </li>
                </ul>
            </div>
            <button class="btn btn-outline-light" id="logout-btn">Logout</button>
        </div>
    </nav>

    <main class="container-fluid mt-3">
        <section id="map-section" class="mb-4">
            <h2>Map Overview</h2>
            <div id="map" style="height: 400px;"></div>
            <div class="mt-2">
                <h3>Filters</h3>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="filter-accepted-requests">
                    <label class="form-check-label" for="filter-accepted-requests">Accepted Requests</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="filter-pending-requests">
                    <label class="form-check-label" for="filter-pending-requests">Pending Requests</label>
                </div>
                <!-- Add more filters as needed -->
            </div>
        </section>

        <section id="inventory-section" class="mb-4">
            <h2>Inventory Management</h2>
            <div class="d-flex justify-content-evenly flex-grow flex-wrap">
                <!-- Base Inventory -->
                <div id="baseInventory" class="card mb-3" style="width:36%; min-width: 600px;">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Base Inventory</h3>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <select id="baseCategorySelect" class="form-select">
                                    <option value="">All Categories</option>
                                    <% categories.forEach((category)=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Search items...">
                            </div>
                        </div>
                        <div class="table-responsive overflow-y-auto" style="max-height: 800px;">
                            <table class="table">
                                <thead style="top: 0; position: sticky; z-index: 3; background-color: #ffffff;">
                                    <tr>
                                        <th>Category</th>
                                        <th>Item</th>
                                        <th>Quantity</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="baseInventoryBody">
                                    <!-- Add rows dynamically -->
                                </tbody>

                            </table>
                        </div>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addItemModal">Add
                            New
                            Item</button>
                        <a href="/admin/catalogue" class="btn btn-secondary mt-3">View Catalogue</a>
                    </div>
                </div>

                <!-- Vehicle Inventories -->
                <div id="vehicleInventory" class="card mb-3" style="width:36%; min-width: 600px; max-height: 800px;">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Vehicle Inventories</h3>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <select id="vehicleCategorySelect" class="form-select">
                                    <option value="">All Categories</option>
                                    <% categories.forEach((category)=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="searchInput" placeholder="Search items...">
                            </div>
                        </div>
                        <div class="accordion" id="vehicleAccordion">
                            <!-- Add vehicle accordions dynamically -->
                        </div>
                    </div>
                </div>
            </div>

        </section>

        <section id="statistics-section" class="mb-4">
            <h2>Statistics</h2>
            <canvas id="statistics-chart"></canvas>
            <div class="mt-2">
                <label for="date-range">Select Date Range:</label>
                <input type="date" id="start-date"> to <input type="date" id="end-date">
                <button class="btn btn-primary" id="update-stats-btn">Update Statistics</button>
            </div>
        </section>

        <section id="announcements-section" class="mb-4">
            <h2>Announcements</h2>
            <div id="announcements-list">
                <!-- Announcements will be populated here -->
            </div>
            <button class="btn btn-primary" id="create-announcement-btn" data-bs-toggle="modal"
                data-bs-target="#newAnnouncementModal">Create New Announcement</button>
        </section>

        <section id="rescuer-accounts-section" class="mb-4">
            <h2>Rescuer Accounts</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="rescuer-accounts-table-body">
                    <!-- Rescuer accounts will be populated here -->
                </tbody>
            </table>
            <button class="btn btn-primary" id="create-rescuer-account-btn" data-bs-toggle="modal"
                data-bs-target="#newRescuerModal">Create New Rescuer Account</button>
        </section>



        <!-- New Announcement Modal -->
        <div class="modal fade" id="newAnnouncementModal" tabindex="-1" aria-labelledby="newAnnouncementModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newAnnouncementModalLabel">Create New Announcement</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="announcementTitle" class="form-label">Title</label>
                                <input type="text" class="form-control" id="announcementTitle" required>
                            </div>
                            <div class="mb-3">
                                <label for="announcementContent" class="form-label">Content</label>
                                <textarea class="form-control" id="announcementContent" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Announcement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- New Rescuer Account Modal -->
        <div class="modal fade" id="newRescuerModal" tabindex="-1" aria-labelledby="newRescuerModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newRescuerModalLabel">Create New Rescuer Account</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="rescuerUsername" class="form-label">Username</label>
                                <input type="text" class="form-control" id="rescuerUsername" required>
                            </div>
                            <div class="mb-3">
                                <label for="rescuerEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="rescuerEmail" required>
                            </div>
                            <div class="mb-3">
                                <label for="rescuerPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="rescuerPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/admin/admin.js"></script>
</body>

</html>